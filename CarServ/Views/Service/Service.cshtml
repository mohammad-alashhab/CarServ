@section Inner1Section{

    <!-- Booking Start -->
    <div class="container-fluid bg-secondary booking my-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-6 py-5">
                    <div class="py-5">
                        <h1 class="text-white mb-4">Certified and Award Winning Car Repair Service Provider</h1>
                        <p class="text-white mb-0">At CarServ, we take pride in our commitment to excellence and our track record of industry recognition. Our reputation as a trusted and award-winning car repair service provider is built on a foundation of unparalleled dedication to your satisfaction.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">Book For A Service</h1>
                        <form>

                            <div class="row g-3">
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.TextBox("YourName",null,new{@class = "form-control border-0",id="Your_Name",style = "height: 55px;"})
                                    @Html.Label("Your Name")
                                    <span asp-validation-for="YourName" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.TextBox("Email",null,new{@class = "form-control border-0",id="Email",style = "height: 55px;"})
                                    @Html.Label("Your Email")
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.DropDownList("Center",@Html.GetEnumSelectList<Center>(),"Select an option",new { @class = "form-select border-0",id="Center",style = "height: 55px;" })
                                    @Html.Label("Center")
                                    <span asp-validation-for="Center" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.DropDownList("Service",@Html.GetEnumSelectList<Services>(),"Select an Service",new { @class = "form-select border-0",id="Service",style = "height: 55px;" })
                                    @Html.Label("Service")
                                    <span asp-validation-for="Service" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 ">
                                    <div class="date form-floating" id="date1" data-target-input="nearest">
                                        @Html.TextBox("ServiceDate", null, new { @class = "form-control border-0 datetimepicker-input",id="Service Date", data_target = "#date1", data_toggle = "datetimepicker", style = "height: 55px;" })
                                        @Html.Label("Service Date")

                                        <span asp-validation-for="ServiceDate" class="text-warning"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.Password("CodeDiscount",null,new{@class = "form-control border-0",id="CodeDiscount",style = "height: 55px;"})
                                    @Html.Label("Code Discount")
                                    <span asp-validation-for="CodeDiscount" class="text-warning"></span>
                                </div>

                                <div class="col-12 ">
                                    @Html.Label("Delivery Payment:",null,new{style="color:white;font-weight:bold; padding-right: 3%;"})
                                    @Html.RadioButton("Payment","Cash",true)@Html.Label("Cash",null,new{style="color:white; padding-right: 3%;"})
                                    @Html.RadioButton("Payment","Card")@Html.Label("Credit/Debit Card",null,new{style="color:white; padding-right: 30%;"})
                                    <span asp-validation-for="Payment" class="text-warning"></span>
                                </div>
                                <div class="col-12">
                                    @Html.Label("Car Options:",null,new{style="color: white; font-weight: bold; padding-right: 11%"})

                                    @Html.RadioButton("Car","Electric",true)@Html.Label("Electric",null,new{style="color:white;"})
                                    @Html.RadioButton("Car","Hybrid")@Html.Label("Hybrid",null,new{style="color:white; padding-right: 45%"})


                                </div>

                                <div class="col-12  form-floating">
                                    @Html.TextArea("SpecialRequest",null,new{@class = "form-control border-0",id="Special Request mansoor"})
                                    @Html.Label("Special Request ")
                                    <span asp-validation-for="SpecialRequest" class="text-warning"></span>

                                </div>
                                <div class="col-12">
                                    <button class="btn btn-secondary w-100 py-3" type="submit">Book Now</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking End -->
    <!-- Testimonial Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="text-center">
                <h6 class="text-primary text-uppercase">// Testimonial //</h6>
                <h1 class="mb-5">Our Clients Say!</h1>
            </div>
            <div class="owl-carousel testimonial-carousel position-relative">
                <div class="testimonial-item text-center">
                    <img class="bg-light rounded-circle p-2 mx-auto mb-3" src="~/asset/img/testimonial-3.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">John Smith</h5>
                    <p>Automotive Enthusiast</p>
                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">I was amazed by the exceptional service I received at one of the repair shops recommended on this website. The team's expertise and dedication made the repair process hassle-free. I highly recommend their services</p>
                    </div>
                </div>
                <div class="testimonial-item text-center">
                    <img class="bg-light rounded-circle p-2 mx-auto mb-3" src="~/asset/img/testimonial-2.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">Michael Johnson</h5>
                    <p>IT Professional</p>
                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">For someone with a busy schedule, finding reliable car services can be a challenge. I stumbled upon this website and was pleasantly surprised by the quality of the repair shop I visited. Quick turnaround and excellent work - that's what I got!</p>
                    </div>
                </div>
                <div class="testimonial-item text-center">
                    <img class="bg-light rounded-circle p-2 mx-auto mb-3" src="~/asset/img/testimonial-1.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">Sarah Davis</h5>
                    <p>Business Owner</p>
                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">I needed a trustworthy car inspection site, and I found it through this platform. Their professionalism and attention to detail ensured that my vehicle was thoroughly inspected. I couldn't be happier with their service.</p>
                    </div>
                </div>
                <div class="testimonial-item text-center">
                    <img class="bg-light rounded-circle p-2 mx-auto mb-3" src="~/asset/img/testimonial-4.jpg" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">Emily Turner</h5>
                    <p>Nurse</p>
                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">As a healthcare worker, my car's reliability is crucial. This platform connected me with a certified car inspection site that gave me peace of mind. I appreciate their commitment to safety and quality.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonial End -->
}

