@model CarServ.Models.Booking
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_Inner2Layout.cshtml";
}

@section Inner2Section{
    <!-- Page Header Start -->
    @* <div class="container-fluid page-header mb-5 p-0" style="background-image: url(~/../../asset/images/T7.jpg);"> *@
    <div class="hide-for-large cell small-12 small-order-2" style="background-image: url(~/../../asset/images/Header-Services.jpg);">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Booking</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>

                        <li class="breadcrumb-item text-white active" aria-current="page">Booking</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="d-flex py-5 px-4">
                        <i class="fa fa-certificate fa-3x text-primary flex-shrink-0"></i>
                        <div class="ps-4">
                            <h5 class="mb-3">Quality Servicing</h5>
                            <p>
                                Exceptional Service Excellence
                                Experience the pinnacle of automotive care
                            </p>
                            <a class="text-secondary border-bottom" href="">Read More</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="d-flex bg-light py-5 px-4">
                        <i class="fa fa-users-cog fa-3x text-primary flex-shrink-0"></i>
                        <div class="ps-4">
                            <h5 class="mb-3">Expert Workers</h5>
                            <p>
                                Skilled Automotive Professionals
                                Trust our expert team for top-tier service
                            </p>
                            <a class="text-secondary border-bottom" href="">Read More</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="d-flex py-5 px-4">
                        <i class="fa fa-tools fa-3x text-primary flex-shrink-0"></i>
                        <div class="ps-4">
                            <h5 class="mb-3">Modern Equipment</h5>
                            <p>
                                Cutting-Edge Technology
                                We employ state-of-the-art equipment for precision
                            </p>
                            <a class="text-secondary border-bottom" href="">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Service End -->
}
@section Inner3Section{
    <!-- Booking Start -->
    <div class="container-fluid bg-secondary booking my-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-6 py-5">
                    <div class="py-5">
                        <h1 class="text-white mb-4">Certified and Award Winning Car Repair Service Provider</h1>
                        <p class="text-white mb-0">At CarServ, we take pride in our commitment to excellence and our track record of industry recognition. Our reputation as a trusted and award-winning car repair service provider is built on a foundation of unparalleled dedication to your satisfaction.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">Book For A Service</h1>
                        <form>

                            <div class="row g-3">
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.TextBox("YourName",null,new{@class = "form-control border-0",id="Your_Name",style = "height: 55px;"})
                                    @Html.Label("Your Name")
                                    <span asp-validation-for="YourName" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.TextBox("Email",null,new{@class = "form-control border-0",id="Email",style = "height: 55px;"})
                                    @Html.Label("Your Email")
                                    <span asp-validation-for="Email" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.DropDownList("Center",@Html.GetEnumSelectList<Center>(),"Select an option",new { @class = "form-select border-0",id="Center",style = "height: 55px;" })
                                    @Html.Label("Center")
                                    <span asp-validation-for="Center" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.DropDownList("Service",@Html.GetEnumSelectList<Services>(),"Select an Service",new { @class = "form-select border-0",id="Service",style = "height: 55px;" })
                                    @Html.Label("Service")
                                    <span asp-validation-for="Service" class="text-warning"></span>
                                </div>
                                <div class="col-12 col-sm-6 ">
                                    <div class="date form-floating" id="date1" data-target-input="nearest">
                                        @Html.TextBox("ServiceDate", null, new { @class = "form-control border-0 datetimepicker-input",id="Service Date", data_target = "#date1", data_toggle = "datetimepicker", style = "height: 55px;" })
                                        @Html.Label("Service Date")

                                        <span asp-validation-for="ServiceDate" class="text-warning"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 form-floating">
                                    @Html.Password("CodeDiscount",null,new{@class = "form-control border-0",id="CodeDiscount",style = "height: 55px;"})
                                    @Html.Label("Code Discount")
                                    <span asp-validation-for="CodeDiscount" class="text-warning"></span>
                                </div>

                                <div class="col-12" style="text-align: left;">
                                    @Html.Label("Delivery Payment:",null,new{style="color:white;font-weight:bold;"})
                                    @Html.RadioButton("Payment","Cash",true)@Html.Label("Cash",null,new{style="color:white;"})
                                    @Html.RadioButton("Payment","Card")@Html.Label("Credit/Debit Card",null,new{style="color:white;"})
                                    <span asp-validation-for="Payment" class="text-warning"></span>
                                </div>
                                <div class="col-12" style="text-align: left;">
                                    @Html.Label("Car Options:",null,new{style="color: white; font-weight: bold;"})

                                    @Html.RadioButton("Car","Electric",true)@Html.Label("Electric",null,new{style="color:white;"})
                                    @Html.RadioButton("Car","Hybrid")@Html.Label("Hybrid",null,new{style="color:white;"})


                                </div>

                                <div class="col-12  form-floating">
                                    @Html.TextArea("SpecialRequest",null,new{@class = "form-control border-0",id="Special Request mansoor"})
                                    @Html.Label("Special Request ")
                                    <span asp-validation-for="SpecialRequest" class="text-warning"></span>

                                </div>
                                <div class="col-12">
                                    <button class="btn btn-secondary w-100 py-3" type="submit">Book Now</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking End -->
    <!-- Call To Action Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-8 col-md-6">
                    <h6 class="text-primary text-uppercase">// Call To Action //</h6>
                    <h1 class="mb-4">Have Any Pre Booking Question?</h1>
                    <p class="mb-0">If you have any inquiries before making a reservation, please don't hesitate to reach out. We're here to assist you. Our team is dedicated to providing the information you need to ensure a seamless experience.</p>
                    <p class="mb-0"><br>Feel free to contact us, and we will be happy to address your concerns promptly and professionally.</p>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="bg-primary d-flex flex-column justify-content-center text-center h-100 p-4">
                        <h3 class="text-white mb-4"><i class="fa fa-phone-alt me-3"></i>+962 78 xxxx xxx</h3>
                        <a href="/Home/Contact" class="btn btn-secondary py-3 px-5">Contact Us<i class="fa fa-arrow-right ms-3"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Call To Action End -->
}

