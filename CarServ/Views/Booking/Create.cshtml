@model CarServ.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section MainSection {
    <h1 style="margin-left:20%">Create</h1>

    <h4 style="margin-left:25%">Booking</h4>
    <hr />
    <div class="row">
        <div class=" mx-auto">
            <div class="col-lg-6">
                <div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                    <h1 class="text-white mb-4">Book For A Service</h1>
                    <form asp-action="Create">

                        <div class="row g-3">
                            <div class="col-12 col-sm-6 form-floating">
                                @Html.TextBox("YourName",null,new{@class = "form-control border-0",id="Your_Name",style = "height: 55px;"})
                                @Html.Label("Your Name")
                                <span asp-validation-for="YourName" class="text-warning"></span>
                            </div>
                            <div class="col-12 col-sm-6 form-floating">
                                @Html.TextBox("Email",null,new{@class = "form-control border-0",id="Email",style = "height: 55px;"})
                                @Html.Label("Your Email")
                                <span asp-validation-for="Email" class="text-warning"></span>
                            </div>
                            <div class="col-12 col-sm-6 form-floating">
                                @Html.DropDownList("Center",@Html.GetEnumSelectList<Center>(),"Select an option",new { @class = "form-select border-0",id="Center",style = "height: 55px;" })
                                @Html.Label("Center")
                                <span asp-validation-for="Center" class="text-warning"></span>
                            </div>
                            <div class="col-12 col-sm-6 form-floating">
                                @Html.DropDownList("Service",@Html.GetEnumSelectList<Services>(),"Select an Service",new { @class = "form-select border-0",id="Service",style = "height: 55px;" })
                                @Html.Label("Service")
                                <span asp-validation-for="Service" class="text-warning"></span>
                            </div>
                            <div class="col-12 col-sm-6 ">
                                <div class="date form-floating" id="date1" data-target-input="nearest">
                                    @Html.TextBox("ServiceDate", null, new { @class = "form-control border-0 datetimepicker-input",id="Service Date", data_target = "#date1", data_toggle = "datetimepicker", style = "height: 55px;" })
                                    @Html.Label("Service Date")

                                    <span asp-validation-for="ServiceDate" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 form-floating">
                                @Html.Password("CodeDiscount",null,new{@class = "form-control border-0",id="CodeDiscount",style = "height: 55px;"})
                                @Html.Label("Code Discount")
                                <span asp-validation-for="CodeDiscount" class="text-warning"></span>
                            </div>

                            <div class="col-12" style="text-align: left;">
                                @Html.Label("Delivery Payment:",null,new{style="color:white;font-weight:bold;"})
                                @Html.RadioButton("Payment","Cash",true)@Html.Label("Cash",null,new{style="color:white;"})
                                @Html.RadioButton("Payment","Card")@Html.Label("Credit/Debit Card",null,new{style="color:white;"})
                                <span asp-validation-for="Payment" class="text-warning"></span>
                            </div>
                            <div class="col-12" style="text-align: left;">
                                @Html.Label("Car Options:",null,new{style="color: white; font-weight: bold;"})

                                @Html.RadioButton("Car","Electric",true)@Html.Label("Electric",null,new{style="color:white;"})
                                @Html.RadioButton("Car","Hybrid")@Html.Label("Hybrid",null,new{style="color:white;"})


                            </div>

                            <div class="col-12  form-floating">
                                @Html.TextArea("SpecialRequest",null,new{@class = "form-control border-0",id="Special Request mansoor"})
                                @Html.Label("Special Request ")
                                <span asp-validation-for="SpecialRequest" class="text-warning"></span>

                            </div>
                            <div class="col-12">
                                <button class="btn btn-secondary w-100 py-3" type="submit">Book Now</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mx-auto">
        <a asp-action="Index">Back to List</a>
    </div>
}
